@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<h1> | Machines | </h1>
<hr>
<h4>Add a Machine</h4>
@using (Html.BeginForm())
{
  @Html.Label("Machine Name")<br>
  @Html.TextBoxFor(model => model.MachineName)<br><br>

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Add machine" class="btn btn-default">
}
<br><p>@Html.ActionLink("Show all Machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>